{
  "rules": {
    "users": {
      ".read": "true",
      "$uid": {
        ".read": "true",
        ".write": "auth != null && $uid === auth.uid",
        "name": {
          ".validate": "newData.isString() && newData.val().length < 28"
        },
        "imageURL": { ".validate": true },
        "bench": { ".validate": "newData.val() < 1000" },
        "squat": { ".validate": "newData.val() < 1000" },
        "deadlift": { ".validate": "newData.val() < 1000" },
        "$other": { ".validate": false }
      }
    }
  }
}
